@page
@model DatabaseManager.Web.Pages.Tables.LogByGuid.IndexModel
@{
}

<div class="container-fluid p-5">
    <div class="row pt-4 align-items-center">
        <div class="col-12">
            <h2 class="text-primary">@Model.ToString() List</h2>
        </div>
        <div class="col-4">
            <h3 class="text-secondary">Rows: @Model.RowCount</h3>
        </div>
        <div class="col-4">
            <h3 class="text-secondary">Used Space: @Model.UsedSpace KB</h3>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr class="table-primary">
                <th>
                    Guid
                </th>
                <th>
                    Timestamp
                </th>
                <th>
                    Model
                </th>
                <th>
                    ModelId
                </th>
                <th>
                    SessionGuid
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.LogWithGuids)
            {
                <input type="hidden" value="@obj.Guid" />
                <tr>
                    <td width="20%">
                        @obj.Guid
                    </td>
                    <td width="20%">
                        @obj.Timestamp
                    </td>
                    <td width="20%">
                        @obj.Model
                    </td>
                    <td width="20%">
                        @obj.ModelId
                    </td>
                    <td width="20%">
                        @obj.SessionGuid
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="pagination-container btn-toolbar" role="toolbar">
        <div class="btn-group me-2" role="group">
            @for (var i = 1; i <= (Model.RowCount + 9) / 10; i++)
            {
                <a class="btn btn-primary" href="?pageNumber=@i">@i</a>
            }
        </div>
    </div>
</div>