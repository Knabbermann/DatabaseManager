@page
@model DatabaseManager.Web.Pages.Tables.Payment.IndexModel
@{
}

<div class="container-fluid p-5">
    <input type="hidden" value="@Model.Payments" />
    <div class="row pt-4 align-items-center">
        <div class="col-6">
            <h2 class="text-primary">@Model.ToString() List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-outline-primary" asp-page="/Tables/Payment/Add">
                <i class="bi bi-plus-square"></i> &nbsp;Add New @Model.ToString()
            </a>
        </div>
        <div class="col-4">
            <h3 class="text-secondary">Rows: @Model.RowCount</h3>
        </div>
        <div class="col-4">
            <h3 class="text-secondary">Columns: @Model.ColumnCount</h3>
        </div>
        <div class="col-4">
            <h3 class="text-secondary">Used Space: @Model.UsedSpace KB</h3>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
        <tr class="table-primary">
            <th>
                Id
            </th>
            <th>
                CustomerId
            </th>
            <th>
                PaymentDate
            </th>
            <th>
                Amount
            </th>
            <th>
                PaymentMethod
            </th>
            <th>
                GcRecord
            </th>
            <th class="fst-italic">
                Action
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model.Payments)
        {
            <input type="hidden" value="@obj.Id" />
            <tr>
                <td width="20%">
                    @obj.Id
                </td>
                <td width="20%">
                    @obj.CustomerId
                </td>
                <td width="10%">
                    @obj.PaymentDate
                </td>
                <td width="10%">
                    @obj.Amount
                </td>
                <td width="10%">
                    @obj.PaymentMethod
                </td>
                <td width="10%">
                    @obj.GcRecord
                </td>
                <td width="20%">
                    <div class="d-flex justify-content-evenly">
                        <a class="btn btn-outline-warning" asp-page="/Tables/Payment/Edit" asp-route-id="@obj.Id">
                            <i class="bi bi-pencil-square"></i>&nbsp;Edit
                        </a>
                        <form asp-page-handler="Remove" asp-route-id="@obj.Id" method="post">
                            <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Do you really want to delete the payment with id @obj.Id?');">
                                <div class="d-flex justify-content-center">
                                    <i class="bi bi-x-square"></i>&nbsp;Remove
                                </div>
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div class="pagination-container btn-toolbar" role="toolbar">
        <div class="btn-group me-2" role="group">
            @for (var i = 1; i <= (Model.RowCount + 9) / 10; i++)
            {
                <a class="btn btn-primary" href="?pageNumber=@i">@i</a>
            }
        </div>
    </div>
</div>