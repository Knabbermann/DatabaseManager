@page
@model DatabaseManager.Web.Pages.Tables.Product.AddModel
@{
}

<div class="container p-3">
    <form method="post">
        <div class="row pt-4 align-items-center">
            <div class="row pb-2">
                <h2 class="text-primary">Add @Model.ToString()</h2>
                <hr />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating py-2 col-4">
                <input asp-for="CProduct.Name" class="form-control" aria-required="true" />
                <label asp-for="CProduct.Name"></label>
                <span asp-validation-for="CProduct.Name" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-4">
                <input asp-for="CProduct.Price" class="form-control" aria-required="true" type="number" />
                <label asp-for="CProduct.Price"></label>
                <span asp-validation-for="CProduct.Price" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-4">
                <input asp-for="CProduct.Stock" class="form-control" aria-required="true" type="number" min="1" />
                <label asp-for="CProduct.Stock"></label>
                <span asp-validation-for="CProduct.Stock" class="text-danger"></span>
            </div>
            <p>Optional:</p>
            <div class="form-floating py-2 col-4">
                <input asp-for="CProduct.Description" class="form-control" aria-required="true" />
                <label asp-for="CProduct.Description"></label>
                <span asp-validation-for="CProduct.Description" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-4">
                <select asp-for="CProduct.Category" class="form-control">
                    <option value="">Select</option>
                    @foreach (var option in Utilities.StaticDetails.Categories)
                    {
                        <option value="@option.Value">@option.Text</option>
                    }
                </select>
                <label asp-for="CProduct.Category"></label>
            </div>
            <div class="form-floating py-2 col-12">
            </div>
            <div class="form-floating py-2 col-6">
                <button class="w-100 btn btn-lg btn-primary" asp-page="/Tables/Product/Add">Add Product</button>
            </div>
            <div class="form-floating py-2 col-6">
                <a class="btn btn-outline-secondary w-100" asp-page="/Tables/Product/Index">Back to list</a>
            </div>
        </div>
    </form>
</div>


@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}